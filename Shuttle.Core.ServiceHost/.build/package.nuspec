<?xml version="1.0"?>
<package>
  <metadata>
    <id>Shuttle.Core.ServiceHost</id>
    <version>{semver}</version>
    <authors>Eben Roux</authors>
    <owners>Eben Roux</owners>
    <license type="expression">BSD-3-Clause</license>
    <projectUrl>https://github.com/shuttle/Shuttle.Core.ServiceHost</projectUrl>
    <icon>images\logo.png</icon>
    <repository type="git" url="https://github.com/Shuttle/Shuttle.Core.ServiceHost.git" />
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Turns your console application into a Windows service.</description>
    <releaseNotes />
    <copyright>Copyright (c) {year}, Eben Roux</copyright>
    <tags>shuttle</tags>
    <frameworkAssemblies>
      <frameworkAssembly assemblyName="System.ServiceProcess" targetFramework="net461" />
    </frameworkAssemblies>
    <dependencies>
      <dependency id="Shuttle.Core.Cli" version="{Shuttle.Core.Cli-version}" />
      <dependency id="Shuttle.Core.Logging" version="{Shuttle.Core.Logging-version}" />
      <dependency id="Shuttle.Core.Reflection" version="{Shuttle.Core.Reflection-version}" />
      <dependency id="Shuttle.Core.Threading" version="{Shuttle.Core.Threading-version}" />
    </dependencies>
  </metadata>
  <files>
    <file src="..\..\..\..\.media\logo.png" target="images\" />
	<file src="lib\**\*.*" target="lib" />
  </files>
</package>